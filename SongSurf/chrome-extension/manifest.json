{
  "manifest_version": 3,
  "name": "SongSurf",
  "version": "4.0.0",
  "description": "Télécharge de la musique depuis YouTube Music via yt-dlp - Version simplifiée",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/Song-logo.png",
      "48": "icons/Song-logo.png",
      "128": "icons/Song-logo.png"
    }
  },
  "icons": {
    "16": "icons/Song-logo.png",
    "48": "icons/Song-logo.png",
    "128": "icons/Song-logo.png"
  }
}
