# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,js,json,yml,yaml,md}]
indent_style = space

[*.py]
indent_size = 4
max_line_length = 120

[*.{js,json}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2
